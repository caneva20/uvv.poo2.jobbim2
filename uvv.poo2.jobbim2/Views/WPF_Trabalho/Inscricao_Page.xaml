<Page x:Class="WPF_Trabalho.Inscricao_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Trabalho"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Inscricao_Page" Height="450" Width="698.714">
    <Grid Background="White">
        <Button x:Name="button_criar" Content="Criar Inscrição" HorizontalAlignment="Left" Margin="121,207,0,0" VerticalAlignment="Top" Width="106" Height="33"/>
        <TextBlock x:Name="texto_inscricao" HorizontalAlignment="Left" Height="43" Margin="246,10,0,0" TextWrapping="Wrap" Text="INSCRIÇÃO" VerticalAlignment="Top" Width="185" FontStyle="Normal" FontWeight="ExtraBold" FontSize="32"/>
        <Label x:Name="label_codFunc" Content="Funcionário" HorizontalAlignment="Left" Height="29" Margin="66,137,0,0" VerticalAlignment="Top" Width="89"/>
        <Label x:Name="label_codCurso" Content="Curso" HorizontalAlignment="Left" Height="29" Margin="66,97,0,0" VerticalAlignment="Top" Width="89"/>
        <Button x:Name="button_cancelar" Content="Cancelar Inscrição" HorizontalAlignment="Left" Margin="433,207,0,0" VerticalAlignment="Top" Width="106" Height="33" IsCancel="True"/>
        <Label x:Name="label_codInscricao" Content="Inscrição" HorizontalAlignment="Left" Height="29" Margin="358,90,0,0" VerticalAlignment="Top" Width="132"/>
        <GridSplitter HorizontalAlignment="Left" Height="283" Margin="342,75,0,0" VerticalAlignment="Top" Width="1" Background="#FF030303" BorderBrush="Black"/>
        <ComboBox x:Name="lista_cursos" HorizontalAlignment="Left" Margin="184,97,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="lista_funcionarios" HorizontalAlignment="Left" Margin="184,137,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="lista_inscricao" HorizontalAlignment="Left" Margin="452,90,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Page>
